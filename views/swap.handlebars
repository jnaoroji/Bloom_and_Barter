<div class="md:p-20 p-12 pt-8">
  <a href="/" class="block text-emerald-700 mb-6">Back to home</a>
  <div class="mb-2">
    {{#if_equals swap.type "Swap"}}
    <span class="text-xs block rounded-full bg-emerald-100 py-1 px-3 w-min ">
      Swap
    </span>
    {{/if_equals}}
    {{#if_equals swap.type "Wanted"}}
    <span class="text-xs block rounded-full bg-blue-100 py-1 px-3 w-min ">
      Wanted
    </span>
    {{/if_equals}}
    {{#if_equals swap.type "Free"}}
    <span class="text-xs block rounded-full bg-orange-100 py-1 px-3 w-min ">
      Free
    </span>
    {{/if_equals}}
  </div>
  <h1 class="text-4xl font-semibold mb-6">{{swap.title}}</h1>
  <div class="mb-3">
    <div class="text-xs font-semibold">{{swap.user.name}}</div>
    <div class="text-xs font-semibold">{{format_date swap.date_created}}</div>
  </div>
 <div class="mb-3">
  <p class="mb-3">{{swap.description}}</p>
  <div class="mt-4">
    <form id="add-comment">
      <label for="comment-text">
        <span class="block text-lg font-semibold mb-2">Add a comment</span>
      </label>
      <textarea class="text-sm p-2 pl-3 rounded-lg w-full border border-gray-300 focus:outline-emerald-600 mb-3" id="comment-text" name="comment-details"></textarea>
      <div class="flex flex-col sm:flex-row">
        <button type="submit" class="rounded-md bg-emerald-700 p-4 py-2 text-neutral-50" id="commentBtn" value="{{post.id}}">Post</button>
        <a href="/" class="text-center block rounded-md p-4 py-2" id="cancel-button">Cancel</button>
        <a href="/your-swaps" class="text-center block rounded-md p-4 py-2" id="delete-button">DELETE</button>
      </div>
    </form>
  </div>
</div>
<script src="/js/delete-swap.js"></script>
